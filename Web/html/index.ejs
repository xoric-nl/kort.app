<!DOCTYPE html>
<html lang="en" class="uk-background-secondary" ng-app="kortApp" ng-controller="mainController">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>Home &middot; Kort.App</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="Description" content="Kort.App - Lekker kort!">
        <link rel="icon" type="image/png" href="/static/img/favicon.png" />

        <!-- Vars -->
        <script>
            const _VERSION = JSON.parse('<%- JSON.stringify(Version) %>');
            const _STATS = JSON.parse('<%- JSON.stringify(Stats) %>');
        </script>

        <!-- jQuery-->
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous" defer></script>

        <!-- ClipboardJs -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.4/clipboard.min.js" defer></script>

        <!-- Foundation -->
        <!-- Compressed CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/foundation-sites@6.6.3/dist/css/foundation.min.css" integrity="sha256-ogmFxjqiTMnZhxCqVmcqTvjfe1Y/ec4WaRj/aQPvn+I=" crossorigin="anonymous">
        <!-- Compressed JavaScript -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/what-input/5.2.10/what-input.min.js" defer></script>
        <script src="https://cdn.jsdelivr.net/npm/foundation-sites@6.6.3/dist/js/foundation.min.js" integrity="sha256-pRF3zifJRA9jXGv++b06qwtSqX1byFQOLjqa2PTEb2o=" crossorigin="anonymous" defer></script>

        <!-- Font-Awesome -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css">

        <!-- Alertify.JS -->
        <!-- JavaScript -->
        <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js" defer></script>
        <!-- CSS -->
        <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/alertify.min.css"/>
        <!-- Default theme -->
        <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/themes/default.min.css"/>

        <!-- Custom Style -->
        <link rel="stylesheet" href="/static/css/style.css" />
    </head>
    <body>
        <%- include('views/cookie-bar'); -%>
        <main class="grid-container">
            <div class="grid-x align-center align-middle" style="height: 100%">
                <div class="shrink custom-container">
                    <img src="/static/img/logo.png" width="70%" alt="Kort.App"/>
                    <div class="darkBackground">
                        <%- include('views/url-form'); -%>
                        <%- include('views/short-url-view'); -%>
                        <%- include('views/disclaimer'); -%>
                        <%- include('views/stats'); -%>
                        <%- include('views/footer'); -%>
                    </div>
                </div>
            </div>
        </main>
        <script src="/static/js/angular.min.js" defer></script>
        <script src="/static/js/angular-cookies.min.js" defer></script>
        <script src="/static/js/ng-clipboard.js" defer></script>
        <script src="/static/js/run.js" defer></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/js/all.min.js" defer></script>
    </body>
</html>