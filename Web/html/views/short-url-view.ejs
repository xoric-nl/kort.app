<div class="grid-container" ng-if="View.getCurrent() == 'shorturlview'" ng-controller="shortUrlViewController">
    <div class="view-title text-left just-back">
        <a class="back" ng-click="View.setView('InputView');"><i class="fas fa-reply"></i></a>
    </div>
    <div class="grid-x grid-padding-x">
        <div class="cell text-left">
            <label>Je nieuwe url is</label>
            <div class="input-group" style="margin: 0;">
                <input class="input-group-field" type="url" ng-model="shortUrl" readonly>
                <div class="input-group-button">
                    <button class="button" ng-copy="shortUrl" ng-click="copySuccess()">Kopieer</button>
                </div>
            </div>
            <a ng-click="View.setView('inputview')" class="input-group-link">
                <i class="fas fa-pencil-alt"></i>Nieuwe URL verkleinen
            </a>
        </div>
    </div>
</div>